<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="500.0" prefWidth="700.0" styleClass="background" stylesheets="@DarkTheme.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ch.vocal.view.RootPaneController">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
                  <MenuItem mnemonicParsing="false" onAction="#handleNew" text="Neues Vocabulair" />
                  <MenuItem mnemonicParsing="false" onAction="#handleOpen" text="Lade ein Vocabulair" />
                  <MenuItem mnemonicParsing="false" onAction="#handleSave" text="Speichere" />
                  <MenuItem mnemonicParsing="false" onAction="#handleSaveAs" text="Speichere als ..." />
                  <MenuItem mnemonicParsing="false" text="Konverter" />
                  <MenuItem mnemonicParsing="false" onAction="#handleExit" text="Exit" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Lernen">
            <items>
                  <MenuItem mnemonicParsing="false" onAction="#Learning" text="Lernen fortsetzen" />
                  <MenuItem mnemonicParsing="false" onAction="#CancelLearn" text="Lernen abbrechen" />
                  <MenuItem mnemonicParsing="false" onAction="#DefLearnLevel" text="Stufe zum Lernen definieren" />
                  <MenuItem mnemonicParsing="false" onAction="#InputNewWord" text="Neue Wörter eingeben" />
                  <MenuItem mnemonicParsing="false" text="Einspieltopf öffnen" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Hilfe">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#handleAbout" text="über Vokabular..." />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
</BorderPane>
